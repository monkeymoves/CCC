---
import BaseLayout from "../layouts/BaseLayout.astro";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
---

<BaseLayout title="Thanks | Celtic Coast Creations">
  <Header />
  <main id="main" class="section">
    <div class="container">
      <h1 class="section-title">Thanks for reaching out</h1>
      <p class="section-lead">
        Your message has been sent. We'll be in touch shortly with ideas for your driftwood piece.
      </p>
      <a class="btn" href="/">Back to home</a>
    </div>
  </main>
  <Footer />
</BaseLayout>
