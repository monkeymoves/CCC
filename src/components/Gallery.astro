---
const items = [
  {
    title: "Driftwood Floor Lamp",
    src: "/images/floorlamp.png"
  },
  {
    title: "Oval Driftwood Mirror",
    src: "/images/oval-mirror.jpg"
  },
  {
    title: "Round Driftwood Mirror",
    src: "/images/round-mirror.png"
  },
  {
    title: "Seashell Mirror",
    src: "/images/seashell-mirror.png"
  },
  {
    title: "Stacked Driftwood Lamp",
    src: "/images/stacked-lamp.jpg"
  },
  {
    title: "Driftwood Throne",
    src: "/images/driftwood-throne.jpg"
  },
  {
    title: "Driftwood Heart",
    src: "/images/heart.jpg"
  },
  {
    title: "Driftwood Shelf",
    src: "/images/shelf.jpg"
  },
  {
    title: "Driftwood Bowl",
    src: "/images/bowl.jpg"
  },
  {
    title: "Bowl in the Making",
    src: "/images/bowl-making.jpg"
  },
  {
    title: "Driftwood Fish",
    src: "/images/Driftwood-Fish.png"
  },
  {
    title: "Tealight Holder",
    src: "/images/tealight.jpg"
  },
  {
    title: "Twin Driftwood Lamps",
    src: "/images/twolamps.jpg"
  }
];
---
<section class="section" id="work">
  <div class="container">
    <div class="gallery-grid">
      {items.map((item) => (
        <a
          class="gallery-item"
          href={item.src}
          data-lightbox-trigger
          data-lightbox-src={item.src}
          data-lightbox-alt={item.title}
          aria-label={`Open ${item.title} fullscreen`}
        >
          <img src={item.src} alt={item.title} loading="lazy" />
          <div class="info">
            <h3>{item.title}</h3>
          </div>
        </a>
      ))}
    </div>
  </div>
</section>
